{
  "private": true,
  "workspaces": [
    "packages/*",
    "e2e"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start:rpc": "echo \"Error: no test specified\" && exit 1",
    "test:rpc": "echo \"Error: no test specified\" && exit 1",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:e2e": "yarn workspace @officesdk/e2e start",
    "lint": "eslint ./packages --ext .ts",
    "build": "bash ./scripts/build.sh",
    "tsc": "tsc -p tsconfig.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/officesdk/web.git"
  },
  "keywords": [
    "office",
    "officesdk",
    "weboffice",
    "word",
    "excel",
    "powerpoint",
    "document",
    "spreadsheet",
    "xlsx",
    "pptx",
    "docx",
    "xls",
    "doc",
    "ppt",
    "pdf"
  ],
  "license": "MIT",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@microsoft/api-extractor": "^7.43.7",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@typescript-eslint/eslint-plugin": "~7.18.0",
    "@typescript-eslint/parser": "~7.18.0",
    "eslint": "^8",
    "eslint-config-alloy": "~5.1.2",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-import": "~2.29.1",
    "eslint-plugin-prettier": "~5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^14",
    "npm-run-all": "~4.1.5",
    "prettier": "^3.5.3",
    "rollup": "^4.40.0",
    "rollup-plugin-dts": "^6.2.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "~5.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write --ignore-unknown",
      "eslint --fix",
      "git add"
    ]
  },
  "packageManager": "yarn@3.7.0",
  "dependencies": {
    "@officesdk/editor-sdk-core": "^0.0.0-11",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-terser": "^0.4.4",
    "esbuild": "^0.25.3",
    "rollup-plugin-esbuild": "^6.2.1"
  }
}
