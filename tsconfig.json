{
  "compilerOptions": {
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "target": "ES5",
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@shimo/officesdk-rpc": [
        "packages/officesdk-rpc/src"
      ],
      "@shimo/officesdk-web": [
        "packages/officesdk-web/src"
      ],
      "@shimo/officesdk-web/server": [
        "packages/officesdk-web/src/server"
      ]
    }
  }
}
